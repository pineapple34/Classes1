<Window x:Class="Classes1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classes1"
        mc:Ignorable="d"
        Title="MainWindow" Height="152.013" Width="344.446">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Label Content="Число 1"/>
            <TextBox x:Name="TB1"/>
            <Label Content="Число 2"/>
            <TextBox x:Name="TB2"/>
            <Button x:Name="Calculate" Content="Расчитать" Click="Calculate_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="output"/>
        </StackPanel>
    </Grid>
</Window>
